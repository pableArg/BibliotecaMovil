<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_top_bottom">

    <View
        android:id="@+id/end_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="shared_element_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border_top_bottom"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_marginBottom="400dp"
            android:src="@drawable/books"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/image"/>

        <TextView
            android:id="@+id/txtTitleDetail"
            style="@style/titleStyle"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:lines="2"
            android:text="@string/title"
            app:layout_constraintHorizontal_bias="0.627"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.132" />


        <TextView
            android:id="@+id/txtKindDetail"
            style="@style/titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="230dp"
            android:maxHeight="25dp"
            android:text="@string/origen"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.035"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleDetail"
            app:layout_constraintVertical_bias="0.137" />

        <TextView
            android:id="@+id/txtAuthorDetail"
            style="@style/titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="230dp"
            android:maxHeight="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/author"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.035"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/txtKindDetail"
            app:layout_constraintVertical_bias="0.137" />

        <TextView
            android:id="@+id/txtEditDetail"
            style="@style/titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="230dp"
            android:maxHeight="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:text="@string/editorial"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.035"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/txtAuthorDetail"
            app:layout_constraintVertical_bias="0.137" />


        <TextView
            android:id="@+id/sinopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/titleStyle"
            android:textSize="18dp"
            android:text="Sinopsis"
            android:layout_marginStart="125dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/txtTitleDetail"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="280dp"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/sinopsis"
            app:layout_constraintStart_toEndOf="@id/txtTitleDetail"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="7dp">

            <TextView
                android:id="@+id/txtSynopsisDetail"
                android:layout_width="270dp"
                android:layout_height="350dp"
                android:text="@string/exampleSynopsis"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.454"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.743" />
        </ScrollView>

        <ImageButton
            android:id="@+id/btnSelectFavourite"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="45dp"
            android:contentDescription="@string/image"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonML"
            android:layout_width="120dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="7dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            app:cardElevation="7dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintStart_toEndOf="@id/btnSelectFavourite"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/icon_meli"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>








